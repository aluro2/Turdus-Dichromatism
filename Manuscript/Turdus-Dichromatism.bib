@article{hart2000,
  title = {Visual Pigments, Oil Droplets, Ocular Media and Cone Photoreceptor Distribution in Two Species of Passerine Bird: The Blue Tit ({{Parus}} Caeruleus {{L}}.) and the Blackbird ({{Turdus}} Merula {{L}}.).},
