  file = {/home/alec/Zotero/storage/KS2UEP3E/Sivula et al. - 2020 - Uncertainty in Bayesian Leave-One-Out Cross-Valida.pdf;/home/alec/Zotero/storage/DWK3NV29/2008.html},
  journal = {arXiv:2008.10296 [stat]},
  keywords = {Statistics - Methodology},
